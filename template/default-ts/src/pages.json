{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/components/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/template/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/index/pages",
      "pages": [
        {
          "path": "layout",
          "style": {
            "navigationBarTitleText": "布局",
            "disableScroll": true
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "navigationStyle": "custom"
  },
  "tabBar": {
    "color": "#333333",
    "selectedColor": "#333333",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabbar/task.png",
        "selectedIconPath": "static/tabbar/task_fill.png",
        "text": "样式"
      },
      {
        "pagePath": "pages/components/index",
        "iconPath": "static/tabbar/manage.png",
        "selectedIconPath": "static/tabbar/manage_fill.png",
        "text": "组件"
      },
      {
        "pagePath": "pages/template/index",
        "iconPath": "static/tabbar/workbench.png",
        "selectedIconPath": "static/tabbar/workbench_fill.png",
        "text": "模板"
      }
    ]
  }
}
